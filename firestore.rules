rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin (Member with is_admin flag)
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'member' &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_admin == true;
    }
    
    // Helper function to check if user is member (can create content)
    function isMember() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'member';
    }
    
    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is in organization
    function isInOrganization(organizationId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/organizations/$(organizationId)) &&
             (get(/databases/$(database)/documents/organizations/$(organizationId)).data.ownerId == request.auth.uid ||
              (get(/databases/$(database)/documents/organizations/$(organizationId)).data.members != null &&
               request.auth.uid in get(/databases/$(database)/documents/organizations/$(organizationId)).data.members));
    }
    
    // Helper function to check if user has role in organization
    function hasRoleInOrg(organizationId, role) {
      return isAuthenticated() && 
             isInOrganization(organizationId) &&
             getUserRole() == role;
    }
    
    // Helper function to check if user can access workspace
    function canAccessWorkspace(workspaceId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/workspaces/$(workspaceId)) &&
             isInOrganization(get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.organizationId);
    }
    
    // Helper function to check if user can access a theme (for comment access)
    function canAccessTheme(themeId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/themes/$(themeId)) &&
             (get(/databases/$(database)/documents/themes/$(themeId)).data.userId == request.auth.uid ||
              (get(/databases/$(database)/documents/themes/$(themeId)).data.workspaceId != null &&
               canAccessWorkspace(get(/databases/$(database)/documents/themes/$(themeId)).data.workspaceId)));
    }
    
    // Helper function to check if user can access an activity's resource
    // Note: Simplified version - Firestore rules don't support if statements or dynamic path construction
    function canAccessActivity(activityData) {
      // User must be authenticated
      // If activity has userId, check if user is in same organization
      return isAuthenticated() &&
             (activityData.userId == null ||
              (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               exists(/databases/$(database)/documents/users/$(activityData.userId)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId != null &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId == 
               get(/databases/$(database)/documents/users/$(activityData.userId)).data.organizationId));
    }
    
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      // Admins can read all user profiles
      allow read: if isAdmin();
      // Note: Preventing removal of last admin should be handled in application code
      // as Firestore rules cannot efficiently check all users in an organization
    }
    
    // Sessions collection
    match /sessions/{sessionId} {
      // Users can create sessions if they're authenticated, set themselves as owner, and are members
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid &&
                     isMember();
      
      // Users can read sessions in their organization or their own sessions
      allow read: if isAuthenticated() && 
                  (resource.data.userId == request.auth.uid ||
                   (resource.data.workspaceId != null && 
                    canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can update their own sessions, or members can update any in their workspace
      allow update: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid ||
                     (isMember() &&
                      resource.data.workspaceId != null &&
                      canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can delete their own sessions, or admins can delete any
      allow delete: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // Admins can read/update/delete any session
      allow read, update, delete: if isAdmin();
    }
    
    // Projects collection
    match /projects/{projectId} {
      // Users can create projects if they're authenticated, set themselves as owner, and are members
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid &&
                     request.resource.data.createdBy == request.auth.uid &&
                     isMember();
      
      // Users can read projects in their organization or their own projects
      allow read: if isAuthenticated() && 
                  (resource.data.userId == request.auth.uid ||
                   request.auth.uid in resource.data.teamMembers ||
                   (resource.data.workspaceId != null && 
                    canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can update their own projects, or members can update any in their workspace
      allow update: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid ||
                     (isMember() &&
                      resource.data.workspaceId != null &&
                      canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can delete their own projects, or admins can delete any
      allow delete: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // Admins can read/update/delete any project
      allow read, update, delete: if isAdmin();
    }
    
    // Themes collection
    match /themes/{themeId} {
      // Users can create themes if authenticated, set themselves as owner, and are members
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid &&
                     request.resource.data.createdBy == request.auth.uid &&
                     isMember();
      
      // Users can read themes in their organization or ones they contribute to
      allow read: if isAuthenticated() && 
                  (resource.data.userId == request.auth.uid ||
                   request.auth.uid in resource.data.contributors ||
                   (resource.data.workspaceId != null && 
                    canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can update their own themes, ones they contribute to, or members can update any in their workspace
      allow update: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid ||
                     request.auth.uid in resource.data.contributors ||
                     (isMember() &&
                      resource.data.workspaceId != null &&
                      canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can delete their own themes, or admins can delete any
      allow delete: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // Admins can read/update/delete any theme
      allow read, update, delete: if isAdmin();
    }
    
    // Comments collection
    match /comments/{commentId} {
      // Users can create comments if authenticated and are members
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid &&
                     isMember() &&
                     canAccessTheme(request.resource.data.themeId);
      
      // Users can read comments only if they can access the theme the comment belongs to
      allow read: if isAuthenticated() && 
                  canAccessTheme(resource.data.themeId);
      
      // Users can update/delete their own comments, or admins can update/delete any
      allow update, delete: if isAuthenticated() && 
                             (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Share Links collection
    match /shareLinks/{shareLinkId} {
      // Users can create share links if authenticated
      allow create: if isAuthenticated() && 
                     request.resource.data.createdBy == request.auth.uid;
      
      // Anyone can read share links (they're meant to be shared)
      allow read: if true;
      
      // Users can update/delete their own share links
      allow update, delete: if isAuthenticated() && 
                             resource.data.createdBy == request.auth.uid;
      
      // Admins can update/delete any share link
      allow update, delete: if isAdmin();
    }
    
    // Teams collection
    match /teams/{teamId} {
      // Users can create teams if authenticated
      allow create: if isAuthenticated() && 
                     request.resource.data.ownerId == request.auth.uid;
      
      // Users can read teams they're members of
      allow read: if isAuthenticated() && 
                  (request.auth.uid in resource.data.members ||
                   resource.data.ownerId == request.auth.uid);
      
      // Team owners and admins can update teams
      allow update: if isAuthenticated() && 
                    (resource.data.ownerId == request.auth.uid ||
                     resource.data.roles[request.auth.uid] == 'admin');
      
      // Only team owners can delete teams
      allow delete: if isAuthenticated() && 
                     resource.data.ownerId == request.auth.uid;
      
      // Admins can read/update/delete any team
      allow read, update, delete: if isAdmin();
    }
    
    // Team Members collection
    match /teamMembers/{memberId} {
      // Users can create team member records if authenticated
      allow create: if isAuthenticated();
      
      // Users can read team members of teams they belong to
      allow read: if isAuthenticated();
      
      // Team admins can update team members
      allow update: if isAuthenticated();
      
      // Team admins can delete team members
      allow delete: if isAuthenticated();
      
      // Admins have full access
      allow read, write: if isAdmin();
    }
    
    // Team Invitations collection
    match /teamInvitations/{invitationId} {
      // Users can create invitations if authenticated
      allow create: if isAuthenticated();
      
      // Users can read invitations sent to them or by them
      allow read: if isAuthenticated() && 
                  (resource.data.inviteeId == request.auth.uid ||
                   resource.data.inviterId == request.auth.uid);
      
      // Users can update invitations they created
      allow update: if isAuthenticated() && 
                    resource.data.inviterId == request.auth.uid;
      
      // Users can delete invitations they created or received
      allow delete: if isAuthenticated() && 
                     (resource.data.inviterId == request.auth.uid ||
                      resource.data.inviteeId == request.auth.uid);
      
      // Admins have full access
      allow read, write: if isAdmin();
    }
    
    // Activities collection
    match /activities/{activityId} {
      // Users can create activities if authenticated
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
      
      // Users can read activities only if they can access the activity's resource
      allow read: if isAuthenticated() && 
                  canAccessActivity(resource.data);
      
      // Users generally shouldn't update/delete activities, but admins can
      allow update, delete: if isAdmin();
    }
    
    // Organizations collection
    match /organizations/{organizationId} {
      // Users can create organizations if authenticated and set themselves as owner
      allow create: if isAuthenticated() && 
                     request.resource.data.ownerId == request.auth.uid;
      
      // Users can read organizations they own or are members of
      // Also allow reading by subdomain for public lookup (for join requests)
      // Allow authenticated users to read organizations (needed for subdomain availability checks)
      allow read: if isAuthenticated() && 
                  (resource.data.ownerId == request.auth.uid ||
                   (resource.data.members != null && request.auth.uid in resource.data.members) ||
                   // Allow reading organization by subdomain for join request flow
                   resource.data.subdomain != null);
      
      // Only owners or admins can update organizations
      allow update: if isAuthenticated() && 
                    (resource.data.ownerId == request.auth.uid ||
                     (isAdmin() && 
                      request.resource.data.ownerId == resource.data.ownerId));
      
      // Only owners can delete organizations
      allow delete: if isAuthenticated() && 
                     resource.data.ownerId == request.auth.uid;
      
      // Admins can read/update/delete any organization
      allow read, update, delete: if isAdmin();
    }
    
    // Workspaces collection
    match /workspaces/{workspaceId} {
      // Users can create workspaces if authenticated and in the organization
      // Also allow if user is the owner of the organization (for initial workspace creation)
      allow create: if isAuthenticated() && 
                     request.resource.data.createdBy == request.auth.uid &&
                     request.resource.data.ownerId == request.auth.uid &&
                     (isInOrganization(request.resource.data.organizationId) ||
                      // Allow if user is the owner of the organization (for initial setup)
                      (exists(/databases/$(database)/documents/organizations/$(request.resource.data.organizationId)) &&
                       get(/databases/$(database)/documents/organizations/$(request.resource.data.organizationId)).data.ownerId == request.auth.uid));
      
      // Users can read workspaces in their organization
      allow read: if isAuthenticated() && 
                  canAccessWorkspace(workspaceId);
      
      // Users can update workspaces they own, or admins can update any in their organization
      // SECURITY: Prevent organizationId, createdBy, and createdAt from being changed
      // Allow ownerId to be changed (ownership transfer) but validate new owner is in same organization
      allow update: if isAuthenticated() && 
                    (resource.data.ownerId == request.auth.uid ||
                     (isAdmin() &&
                      canAccessWorkspace(workspaceId))) &&
                    // CRITICAL: Prevent workspace from being moved to different organization
                    request.resource.data.organizationId == resource.data.organizationId &&
                    // Prevent creator from being changed (immutable audit field)
                    request.resource.data.createdBy == resource.data.createdBy &&
                    // Prevent creation timestamp from being changed (immutable audit field)
                    request.resource.data.createdAt == resource.data.createdAt &&
                    // If ownerId is being changed, validate new owner is in same organization
                    (request.resource.data.ownerId == resource.data.ownerId ||
                     (request.resource.data.ownerId != null &&
                      exists(/databases/$(database)/documents/users/$(request.resource.data.ownerId)) &&
                      get(/databases/$(database)/documents/users/$(request.resource.data.ownerId)).data.organizationId == resource.data.organizationId));
      
      // Users can delete workspaces they own, or admins can delete any
      allow delete: if isAuthenticated() && 
                     (resource.data.ownerId == request.auth.uid ||
                      (isAdmin() &&
                       canAccessWorkspace(workspaceId)));
      
      // Admins can read/update/delete any workspace (but still cannot change organizationId)
      allow read, delete: if isAdmin();
      allow update: if isAdmin() &&
                     // Even admins cannot move workspaces between organizations
                     request.resource.data.organizationId == resource.data.organizationId &&
                     request.resource.data.createdBy == resource.data.createdBy &&
                     request.resource.data.createdAt == resource.data.createdAt &&
                     // Validate new owner is in same organization if ownerId is being changed
                     (request.resource.data.ownerId == resource.data.ownerId ||
                      (request.resource.data.ownerId != null &&
                       exists(/databases/$(database)/documents/users/$(request.resource.data.ownerId)) &&
                       get(/databases/$(database)/documents/users/$(request.resource.data.ownerId)).data.organizationId == resource.data.organizationId));
    }
    
    // Subscriptions collection
    match /subscriptions/{subscriptionId} {
      // Users can create subscriptions if authenticated and in the organization
      allow create: if isAuthenticated() && 
                     isInOrganization(request.resource.data.organizationId);
      
      // Users can read subscriptions for their organization
      allow read: if isAuthenticated() && 
                  isInOrganization(resource.data.organizationId);
      
      // Only organization owners or admins can update subscriptions
      allow update: if isAuthenticated() && 
                    (get(/databases/$(database)/documents/organizations/$(resource.data.organizationId)).data.ownerId == request.auth.uid ||
                     isAdmin());
      
      // Only organization owners can delete subscriptions
      allow delete: if isAuthenticated() && 
                     get(/databases/$(database)/documents/organizations/$(resource.data.organizationId)).data.ownerId == request.auth.uid;
      
      // Admins can read/update/delete any subscription
      allow read, update, delete: if isAdmin();
    }
    
    // Organization Requests collection
    match /organizationRequests/{requestId} {
      // Users can create join requests for any organization
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
      
      // Users can read their own requests
      allow read: if isAuthenticated() && 
                  resource.data.userId == request.auth.uid;
      
      // Organization admins can read requests for their organization
      allow read: if isAuthenticated() && 
                  isInOrganization(resource.data.organizationId);
      
      // Users can update their own requests (to cancel)
      // But we'll handle cancellation via delete instead
      
      // Organization admins can update requests for their organization (approve/reject)
      allow update: if isAuthenticated() && 
                    isInOrganization(resource.data.organizationId) &&
                    // Verify user is admin or owner
                    (get(/databases/$(database)/documents/organizations/$(resource.data.organizationId)).data.ownerId == request.auth.uid ||
                     (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId == resource.data.organizationId &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_admin == true));
      
      // Users can delete their own pending requests (cancel)
      allow delete: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid &&
                     resource.data.status == 'pending';
      
      // Admins can read/update/delete any request
      allow read, update, delete: if isAdmin();
    }
  }
}

