rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin (Member with is_admin flag)
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'member' &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.is_admin == true;
    }
    
    // Helper function to check if user is member (can create content)
    function isMember() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'member';
    }
    
    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is in organization
    function isInOrganization(organizationId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/organizations/$(organizationId)) &&
             (get(/databases/$(database)/documents/organizations/$(organizationId)).data.ownerId == request.auth.uid ||
              (get(/databases/$(database)/documents/organizations/$(organizationId)).data.members != null &&
               request.auth.uid in get(/databases/$(database)/documents/organizations/$(organizationId)).data.members));
    }
    
    // Helper function to check if user has role in organization
    function hasRoleInOrg(organizationId, role) {
      return isAuthenticated() && 
             isInOrganization(organizationId) &&
             getUserRole() == role;
    }
    
    // Helper function to check if user can access workspace
    function canAccessWorkspace(workspaceId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/workspaces/$(workspaceId)) &&
             isInOrganization(get(/databases/$(database)/documents/workspaces/$(workspaceId)).data.organizationId);
    }
    
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      // Admins can read all user profiles
      allow read: if isAdmin();
      // Note: Preventing removal of last admin should be handled in application code
      // as Firestore rules cannot efficiently check all users in an organization
    }
    
    // Sessions collection
    match /sessions/{sessionId} {
      // Users can create sessions if they're authenticated, set themselves as owner, and are members
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid &&
                     isMember();
      
      // Users can read sessions in their organization or their own sessions
      allow read: if isAuthenticated() && 
                  (resource.data.userId == request.auth.uid ||
                   (resource.data.workspaceId != null && 
                    canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can update their own sessions, or members can update any in their workspace
      allow update: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid ||
                     (isMember() &&
                      resource.data.workspaceId != null &&
                      canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can delete their own sessions, or admins can delete any
      allow delete: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // Admins can read/update/delete any session
      allow read, update, delete: if isAdmin();
    }
    
    // Projects collection
    match /projects/{projectId} {
      // Users can create projects if they're authenticated, set themselves as owner, and are members
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid &&
                     request.resource.data.createdBy == request.auth.uid &&
                     isMember();
      
      // Users can read projects in their organization or their own projects
      allow read: if isAuthenticated() && 
                  (resource.data.userId == request.auth.uid ||
                   request.auth.uid in resource.data.teamMembers ||
                   (resource.data.workspaceId != null && 
                    canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can update their own projects, or members can update any in their workspace
      allow update: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid ||
                     (isMember() &&
                      resource.data.workspaceId != null &&
                      canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can delete their own projects, or admins can delete any
      allow delete: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // Admins can read/update/delete any project
      allow read, update, delete: if isAdmin();
    }
    
    // Problem Spaces collection
    match /problemSpaces/{problemSpaceId} {
      // Users can create problem spaces if authenticated, set themselves as owner, and are members
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid &&
                     request.resource.data.createdBy == request.auth.uid &&
                     isMember();
      
      // Users can read problem spaces in their organization or ones they contribute to
      allow read: if isAuthenticated() && 
                  (resource.data.userId == request.auth.uid ||
                   request.auth.uid in resource.data.contributors ||
                   (resource.data.workspaceId != null && 
                    canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can update their own problem spaces, ones they contribute to, or members can update any in their workspace
      allow update: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid ||
                     request.auth.uid in resource.data.contributors ||
                     (isMember() &&
                      resource.data.workspaceId != null &&
                      canAccessWorkspace(resource.data.workspaceId)));
      
      // Users can delete their own problem spaces, or admins can delete any
      allow delete: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      // Admins can read/update/delete any problem space
      allow read, update, delete: if isAdmin();
    }
    
    // Comments collection
    match /comments/{commentId} {
      // Users can create comments if authenticated and are members
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid &&
                     isMember();
      
      // Users can read comments in their organization
      allow read: if isAuthenticated();
      
      // Users can update/delete their own comments, or admins can update/delete any
      allow update, delete: if isAuthenticated() && 
                             (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Share Links collection
    match /shareLinks/{shareLinkId} {
      // Users can create share links if authenticated
      allow create: if isAuthenticated() && 
                     request.resource.data.createdBy == request.auth.uid;
      
      // Anyone can read share links (they're meant to be shared)
      allow read: if true;
      
      // Users can update/delete their own share links
      allow update, delete: if isAuthenticated() && 
                             resource.data.createdBy == request.auth.uid;
      
      // Admins can update/delete any share link
      allow update, delete: if isAdmin();
    }
    
    // Teams collection
    match /teams/{teamId} {
      // Users can create teams if authenticated
      allow create: if isAuthenticated() && 
                     request.resource.data.ownerId == request.auth.uid;
      
      // Users can read teams they're members of
      allow read: if isAuthenticated() && 
                  (request.auth.uid in resource.data.members ||
                   resource.data.ownerId == request.auth.uid);
      
      // Team owners and admins can update teams
      allow update: if isAuthenticated() && 
                    (resource.data.ownerId == request.auth.uid ||
                     resource.data.roles[request.auth.uid] == 'admin');
      
      // Only team owners can delete teams
      allow delete: if isAuthenticated() && 
                     resource.data.ownerId == request.auth.uid;
      
      // Admins can read/update/delete any team
      allow read, update, delete: if isAdmin();
    }
    
    // Team Members collection
    match /teamMembers/{memberId} {
      // Users can create team member records if authenticated
      allow create: if isAuthenticated();
      
      // Users can read team members of teams they belong to
      allow read: if isAuthenticated();
      
      // Team admins can update team members
      allow update: if isAuthenticated();
      
      // Team admins can delete team members
      allow delete: if isAuthenticated();
      
      // Admins have full access
      allow read, write: if isAdmin();
    }
    
    // Team Invitations collection
    match /teamInvitations/{invitationId} {
      // Users can create invitations if authenticated
      allow create: if isAuthenticated();
      
      // Users can read invitations sent to them or by them
      allow read: if isAuthenticated() && 
                  (resource.data.inviteeId == request.auth.uid ||
                   resource.data.inviterId == request.auth.uid);
      
      // Users can update invitations they created
      allow update: if isAuthenticated() && 
                    resource.data.inviterId == request.auth.uid;
      
      // Users can delete invitations they created or received
      allow delete: if isAuthenticated() && 
                     (resource.data.inviterId == request.auth.uid ||
                      resource.data.inviteeId == request.auth.uid);
      
      // Admins have full access
      allow read, write: if isAdmin();
    }
    
    // Activities collection
    match /activities/{activityId} {
      // Users can create activities if authenticated
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
      
      // Users can read activities related to their resources
      allow read: if isAuthenticated();
      
      // Users generally shouldn't update/delete activities, but admins can
      allow update, delete: if isAdmin();
    }
    
    // Organizations collection
    match /organizations/{organizationId} {
      // Users can create organizations if authenticated and set themselves as owner
      allow create: if isAuthenticated() && 
                     request.resource.data.ownerId == request.auth.uid;
      
      // Users can read organizations they own or are members of
      allow read: if isAuthenticated() && 
                  (resource.data.ownerId == request.auth.uid ||
                   (resource.data.members != null && request.auth.uid in resource.data.members));
      
      // Only owners or admins can update organizations
      allow update: if isAuthenticated() && 
                    (resource.data.ownerId == request.auth.uid ||
                     (isAdmin() && 
                      request.resource.data.ownerId == resource.data.ownerId));
      
      // Only owners can delete organizations
      allow delete: if isAuthenticated() && 
                     resource.data.ownerId == request.auth.uid;
      
      // Admins can read/update/delete any organization
      allow read, update, delete: if isAdmin();
    }
    
    // Workspaces collection
    match /workspaces/{workspaceId} {
      // Users can create workspaces if authenticated and in the organization
      allow create: if isAuthenticated() && 
                     request.resource.data.createdBy == request.auth.uid &&
                     isInOrganization(request.resource.data.organizationId);
      
      // Users can read workspaces in their organization
      allow read: if isAuthenticated() && 
                  canAccessWorkspace(workspaceId);
      
      // Users can update workspaces they created, or admins can update any in their organization
      allow update: if isAuthenticated() && 
                    (resource.data.createdBy == request.auth.uid ||
                     (isAdmin() &&
                      canAccessWorkspace(workspaceId)));
      
      // Users can delete workspaces they created, or admins can delete any
      allow delete: if isAuthenticated() && 
                     (resource.data.createdBy == request.auth.uid ||
                      (isAdmin() &&
                       canAccessWorkspace(workspaceId)));
      
      // Admins can read/update/delete any workspace
      allow read, update, delete: if isAdmin();
    }
    
    // Subscriptions collection
    match /subscriptions/{subscriptionId} {
      // Users can create subscriptions if authenticated and in the organization
      allow create: if isAuthenticated() && 
                     isInOrganization(request.resource.data.organizationId);
      
      // Users can read subscriptions for their organization
      allow read: if isAuthenticated() && 
                  isInOrganization(resource.data.organizationId);
      
      // Only organization owners or admins can update subscriptions
      allow update: if isAuthenticated() && 
                    (get(/databases/$(database)/documents/organizations/$(resource.data.organizationId)).data.ownerId == request.auth.uid ||
                     isAdmin());
      
      // Only organization owners can delete subscriptions
      allow delete: if isAuthenticated() && 
                     get(/databases/$(database)/documents/organizations/$(resource.data.organizationId)).data.ownerId == request.auth.uid;
      
      // Admins can read/update/delete any subscription
      allow read, update, delete: if isAdmin();
    }
  }
}

